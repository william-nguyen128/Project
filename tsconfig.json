{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node"]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules"]
}
